<div class="max-w-5xl mx-auto px-6 py-12">
  <a href="/admin" class="text-blue-600 hover:underline text-sm">&larr; Back to Dashboard</a>
  <h1 class="text-2xl font-bold mt-4 mb-8">Reports</h1>

  <% if @reports.any? %>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-gray-200 text-left text-gray-500">
            <th class="pb-2 pr-4">Reporter</th>
            <th class="pb-2 pr-4">Reason</th>
            <th class="pb-2 pr-4">Note Author</th>
            <th class="pb-2 pr-4">Note (excerpt)</th>
            <th class="pb-2 pr-4">Reports</th>
            <th class="pb-2 pr-4">Date</th>
            <th class="pb-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @reports.each do |report| %>
            <tr class="border-b border-gray-100">
              <td class="py-2 pr-4">@<%= report.user.twitter_handle %></td>
              <td class="py-2 pr-4"><%= report.reason %></td>
              <td class="py-2 pr-4">@<%= report.note.author.twitter_handle %></td>
              <td class="py-2 pr-4 max-w-xs truncate"><%= report.note.body.truncate(80) %></td>
              <td class="py-2 pr-4"><%= report.note.reports_count %></td>
              <td class="py-2 pr-4"><%= report.created_at.strftime("%b %d") %></td>
              <td class="py-2 whitespace-nowrap">
                <%= form_with url: admin_report_path(report), method: :patch, local: true, class: "inline" do %>
                  <input type="hidden" name="action_taken" value="dismiss">
                  <button type="submit" class="text-xs px-2 py-1 rounded bg-gray-100 text-gray-700 hover:bg-gray-200">Dismiss</button>
                <% end %>
                <%= form_with url: admin_report_path(report), method: :patch, local: true, class: "inline ml-1" do %>
                  <input type="hidden" name="action_taken" value="remove">
                  <button type="submit" class="text-xs px-2 py-1 rounded bg-red-100 text-red-700 hover:bg-red-200">Remove</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-500">No reports to review.</p>
  <% end %>
</div>
