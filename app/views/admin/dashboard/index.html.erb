<div class="max-w-5xl mx-auto px-6 py-12">
  <h1 class="text-2xl font-bold mb-8">Admin Dashboard</h1>

  <div class="grid grid-cols-2 sm:grid-cols-4 gap-6 mb-10">
    <div class="bg-gray-50 rounded-lg p-5">
      <p class="text-sm text-gray-500">Total Users</p>
      <p class="text-2xl font-bold"><%= @total_users %></p>
    </div>
    <div class="bg-gray-50 rounded-lg p-5">
      <p class="text-sm text-gray-500">Total Notes</p>
      <p class="text-2xl font-bold"><%= @total_notes %></p>
    </div>
    <div class="bg-yellow-50 rounded-lg p-5">
      <p class="text-sm text-yellow-700">Flagged Notes</p>
      <p class="text-2xl font-bold text-yellow-700"><%= @flagged_notes %></p>
    </div>
    <div class="bg-red-50 rounded-lg p-5">
      <p class="text-sm text-red-700">Hidden Notes</p>
      <p class="text-2xl font-bold text-red-700"><%= @hidden_notes %></p>
    </div>
  </div>

  <h2 class="text-xl font-semibold mb-4">Recent Reports</h2>
  <% if @recent_reports.any? %>
    <div class="overflow-x-auto mb-10">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-gray-200 text-left text-gray-500">
            <th class="pb-2 pr-4">Reporter</th>
            <th class="pb-2 pr-4">Reason</th>
            <th class="pb-2 pr-4">Note Author</th>
            <th class="pb-2 pr-4">Note (excerpt)</th>
            <th class="pb-2 pr-4">Reports</th>
            <th class="pb-2">Date</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_reports.each do |report| %>
            <tr class="border-b border-gray-100">
              <td class="py-2 pr-4">@<%= report.user.twitter_handle %></td>
              <td class="py-2 pr-4"><%= report.reason %></td>
              <td class="py-2 pr-4">@<%= report.note.author.twitter_handle %></td>
              <td class="py-2 pr-4 max-w-xs truncate"><%= report.note.body.truncate(80) %></td>
              <td class="py-2 pr-4"><%= report.note.reports_count %></td>
              <td class="py-2"><%= report.created_at.strftime("%b %d") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-500 mb-10">No reports yet.</p>
  <% end %>

  <div class="border-t border-gray-200 pt-6 flex gap-4">
    <a href="/admin/reports" class="inline-block px-4 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 text-sm font-medium">View Reports</a>
    <a href="/admin/notes" class="inline-block px-4 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 text-sm font-medium">Browse Notes</a>
    <% if @is_superadmin %>
      <a href="/admin/users" class="inline-block px-4 py-2 bg-blue-100 text-blue-700 rounded hover:bg-blue-200 text-sm font-medium">Manage Users</a>
    <% end %>
  </div>
</div>
